{
  "name": "scrum-master",
  "displayName": "ScrumMaster",
  "description": "An AI Scrum Master that instantly converts your code context and intent into ready-to-groom Jira tickets.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scrum-master-explorer",
          "title": "ScrumMaster",
          "icon": "$(hubot)" 
        }
      ]
    },
    "views": {
      "scrum-master-explorer": [
        {
          "type": "webview",
          "id": "scrum-master.sidebar",
          "name": "AI Scrum Master"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.3"
  },
  "dependencies": {
    "axios": "^1.13.6"
  }
}
